<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane minHeight="720.0" minWidth="1280.0" prefHeight="720.0" prefWidth="1280.0" styleClass="root" stylesheets="@start.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.StartController">
   <children>
       
       <!-- Main centered container -->
       <VBox alignment="CENTER" spacing="48" styleClass="centered,maxw-960">
           <padding>
               <Insets bottom="48" left="32" right="32" top="48" />
           </padding>
          <children>
              
              <!-- Title Section -->
              <VBox alignment="CENTER" styleClass="stack-8">
                 <children>
                     <Text styleClass="title-text" text="Code Trainer">
                         <font>
                             <Font name="Segoe UI Semibold" size="48" />
                         </font>
                     </Text>
                     <Text styleClass="subtitle-text" wrappingWidth="1.0">
                         <font>
                             <Font name="Segoe UI" size="14" />
                         </font>
                     </Text>
                 </children>
              </VBox>
              
              <!-- Action Buttons -->
              <HBox alignment="CENTER" spacing="12" styleClass="stack-12">
                 <children>
                     <Button fx:id="startButton" onAction="#startGame" prefWidth="140" styleClass="button,primary" text="Start">
                         <font>
                             <Font name="Segoe UI Semibold" size="14" />
                         </font>
                     </Button>
                     <Button fx:id="quitButton" onAction="#quitGame" prefWidth="140" styleClass="button" text="Quit">
                         <font>
                             <Font name="Segoe UI" size="14" />
                         </font>
                     </Button>
                 </children>
              </HBox>
          </children>
       </VBox>
   </children>
    
</StackPane>
