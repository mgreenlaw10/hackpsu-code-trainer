<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import org.fxmisc.richtext.CodeArea?>

<AnchorPane minHeight="600.0" minWidth="900.0" prefHeight="800.0" prefWidth="1200.0" styleClass="root" stylesheets="@app.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.GameController">

    <children>
        <SplitPane dividerPositions="0.45" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <items>
            
                <VBox minWidth="300.0" spacing="12.0" styleClass="panel">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                   <children>
                       <HBox alignment="CENTER_LEFT" spacing="16.0">
                           <children>
                               <VBox spacing="4.0">
                                   <children>
                                       <Label styleClass="slider-label" text="Step Delay" />
                                       <Slider fx:id="speedSlider" min="100" max="2000" value="500" showTickMarks="false" showTickLabels="false" prefWidth="140.0" styleClass="speed-slider" />
                                   </children>
                               </VBox>
                               <Button fx:id="runButton" onAction="#runCode" prefHeight="40.0" prefWidth="130.0" styleClass="button,primary" text="â–¶ Run Code" />
                           </children>
                       </HBox>
                       <VBox spacing="0" styleClass="code-editor-container" VBox.vgrow="ALWAYS">
                           <children>
                               <HBox styleClass="file-header" alignment="CENTER_LEFT">
                                   <children>
                                       
                                       <Label styleClass="file-path" text="Code Editor" />
                                   </children>
                               </HBox>
                               <CodeArea fx:id="codeEditor" styleClass="code-editor" wrapText="false" VBox.vgrow="ALWAYS" />
                           </children>
                       </VBox>
                   </children>
                </VBox>

                <VBox minWidth="300.0" spacing="12.0" styleClass="panel">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        
                        <HBox spacing="8.0">
                            <children>
                                <Button fx:id="gameTabButton" onAction="#showGameTab" prefWidth="80.0" styleClass="tab-button, tab-active" text="Game" />
                                <Button fx:id="tasksTabButton" onAction="#showTasksTab" prefWidth="80.0" styleClass="tab-button" text="Tasks" />
                                <Button fx:id="docsTabButton" onAction="#showDocsTab" prefWidth="80.0" styleClass="tab-button" text="Docs" />
                            </children>
                        </HBox>
                        
                        
                        <StackPane VBox.vgrow="ALWAYS">
                            <children>
                                
                                <StackPane fx:id="gameTabContent" styleClass="canvas-container">
                                    <children>
                                        <Canvas fx:id="gameCanvas" styleClass="dynamic-canvas" />
                                    </children>
                                </StackPane>
                                
                                
                                <ScrollPane fx:id="tasksTabContent" fitToWidth="true" styleClass="docs-container" visible="false">
                                    <content>
                                        <VBox spacing="20.0" styleClass="docs-content">
                                            <padding>
                                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                            </padding>
                                           <children>
                                               
                                               <Label styleClass="docs-title" text="Level Tasks" />
                                               
                                               <VBox spacing="8.0">
                                                  <children>
                                                      <Label styleClass="docs-section-title" text="Level 1" />
                                                      <Label styleClass="docs-text" text="level 1 info" wrapText="true" />
                                                  </children>
                                               </VBox>
                                               
                                               <VBox spacing="8.0">
                                                  <children>
                                                      <Label styleClass="docs-section-title" text="Level 2" />
                                                      <Label styleClass="docs-text" text="level 2 info" wrapText="true" />
                                                  </children>
                                               </VBox>
                                                      <VBox spacing="8.0">
                                                  <children>
                                                      <Label styleClass="docs-section-title" text="Level 3" />
                                                      <Label styleClass="docs-text" text="level 3 info" wrapText="true" />
                                                  </children>
                                               </VBox>
                                               
                                           </children>
                                        </VBox>
                                    </content>
                                </ScrollPane>
                                
                                
                                <ScrollPane fx:id="docsTabContent" fitToWidth="true" styleClass="docs-container" visible="false">
                                    <content>
                                        <VBox spacing="20.0" styleClass="docs-content">
                                            <padding>
                                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                            </padding>
                                           <children>
                                               
                                               
                                               <Label styleClass="docs-title" text="Game Documentation" />
                                               
                                               
                                               <VBox spacing="8.0">
                                                  <children>
                                                      <Label styleClass="docs-section-title" text="How to Play" />
                                                      <Label styleClass="docs-text" text="In this game you want to move your character to get to the end reward." wrapText="true" />
                                                  </children>
                                               </VBox>
                                               
                                               
                                               <VBox spacing="8.0">
                                                  <children>
                                                      <Label styleClass="docs-section-title" text="Keywords" />
                                                      
                                                      
                                                      <HBox spacing="12.0" styleClass="docs-keyword">
                                                         <children>
                                                             <Label minWidth="120.0" styleClass="docs-keyword-name" text="move()" />
                                                             <Label styleClass="docs-text" text="This function will move your character UP, DOWN, RIGHT, and LEFT" wrapText="true" HBox.hgrow="ALWAYS" />
                                                         </children>
                                                      </HBox>

                                                  </children>
                                               </VBox>
                                               
                                               
                                               <VBox spacing="8.0">
                                                  <children>
                                                      <Label styleClass="docs-section-title" text="Examples" />
                                                      <Label styleClass="docs-code-block" text="move(UP)&#10;move(RIGHT)&#10;move(DOWN)" />
                                                  </children>
                                               </VBox>
                                           </children>
                                        </VBox>
                                    </content>
                                </ScrollPane>
                            </children>
                        </StackPane>
                    </children>
                </VBox>
            </items>
        </SplitPane>
    </children>
</AnchorPane>
